<Window x:Class="Recetario.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:USerCOntrol="clr-namespace:UserControlReceta;assembly=UserControlReceta"
        xmlns:local="clr-namespace:Recetario"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <DockPanel>
        <Menu DockPanel.Dock="Top" >
            <MenuItem Header="Archivo">
                <MenuItem Header="Nuevo     Ctrl+N" Icon="g"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Salir"></MenuItem>
            </MenuItem>
            <MenuItem Header="Editar">
                <MenuItem Header="Editar Receta..."></MenuItem>
                <MenuItem Header="Eliminar Receta..."></MenuItem>
            </MenuItem>
        </Menu>

        <ListBox Width="200" Margin="15" x:Name="lstRecetas" MouseDoubleClick="lstRecetas_MouseDoubleClick" ></ListBox>
        
        <USerCOntrol:UserControl1 Margin="1,15,15,15"></USerCOntrol:UserControl1>
    </DockPanel>
</Window>
